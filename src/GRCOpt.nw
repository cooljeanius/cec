void delete_node(STNode *n)
{
  assert(n);

  if (n->parent) {
    erase(n->parent->children, n);
    n->parent = 0;
  }

  for ( vector<STNode*>::const_iterator i = n->children.begin() ;
        i != n->children.end() ; i++ )
    (*i)->parent = 0;

  n->children.clear();

  delete n;
}
